    <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
        <span class="d-block">
            <a href="{{ path('micro_post_user', {'username': post.user.username}) }}"><strong class="text-gray-dark">@{{ post.user.username }}</strong></a>
